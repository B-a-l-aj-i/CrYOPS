{
  "name": "cryops",
  "version": "0.1.0",
  "private": true,
  "description": "Create Your Own Portfolio Site - A powerful Next.js application",
  "keywords": [
    "react",
    "typescript",
    "nextjs",
    "tailwindcss",
    "portfolio",
    "github"
  ],
  "author": {
    "name": "Timeless",
    "email": "hello@timeless.co",
    "url": "https://timeless.co/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timelessco/cryops.git"
  },
  "bugs": {
    "url": "https://github.com/timelessco/cryops/issues"
  },
  "license": "MIT",
  "engines": {
    "node": "^20.0.0 || ^22.0.0 || ^25.0.0",
    "pnpm": "^9.0.0 || ^10.0.0"
  },
  "packageManager": "pnpm@10.15.1",
  "scripts": {
    "dev": "next dev",
    "dev:sourcemap": "cross-env SOURCEMAP=true pnpm dev",
    "build": "pnpm lint && next build",
    "build:ci": "cross-env SKIP_ENV_VALIDATION=true pnpm lint && next build",
    "build:start": "pnpm build && pnpm start",
    "start": "next start",
    "lint": "pnpm lint:prettier && pnpm lint:eslint && pnpm lint:types && pnpm lint:spelling && pnpm lint:css && pnpm lint:knip",
    "lint:prettier": "prettier --check --cache --cache-location=.prettiercache --ignore-unknown .",
    "lint:eslint": "eslint --cache --color .",
    "lint:types": "tsc --noEmit",
    "lint:spelling": "cspell --dot --gitignore --cache --no-progress --show-context check \"**/*\"",
    "lint:css": "stylelint --cache --ignore-path .gitignore --color -f verbose '**/*.css'",
    "lint:md": "markdownlint-cli2",
    "lint:knip": "knip --production --no-exit-code",
    "fix": "pnpm fix:prettier && pnpm fix:eslint && pnpm fix:css",
    "fix:prettier": "prettier --write --cache --cache-location=.prettiercache --list-different --ignore-unknown .",
    "fix:eslint": "eslint --cache --color --fix .",
    "fix:css": "stylelint --fix --cache --ignore-path .gitignore --color -f verbose '**/*.css'",
    "fix:md": "markdownlint-cli2 --fix",
    "fix:spelling": "cspell --no-must-find-files --no-progress --words-only --unique | sort -u >> cspell.json || true",
    "type-check": "pnpm lint:types",
    "prepare": "is-ci || husky"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --cache-location=.prettiercache --list-different --ignore-unknown",
      "cspell --no-must-find-files --no-progress"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.1.1",
    "@tanstack/react-query": "^5.90.16",
    "@vercel/sdk": "^1.18.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "next-auth": "5.0.0-beta.30",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-github-calendar": "^5.0.4",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/parser": "^8.41.0",
    "cross-env": "^10.0.0",
    "cspell": "^9.2.1",
    "eslint": "^9",
    "eslint-config-next": "16.1.1",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "is-ci": "^4.1.0",
    "knip": "^5.63.0",
    "lint-staged": "^16.1.6",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "postcss": "^8.4.0"
  }
}
